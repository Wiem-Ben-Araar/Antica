{% extends 'base.html.twig' %}

{% block title %}
    Edit | Enchere
{% endblock %}

{% block body %}
<div class="breadcrumb_section bg_gray page-title-mini">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="page-title">
                    <h1>Edit | Enchere</h1>
                </div>
            </div>
            <div class="col-md-6">
                <ol class="breadcrumb justify-content-md-end">
                    <li class="breadcrumb-item">
                        <a href="#">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_enchere_index') }}">Auctions</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_enchere_new') }}">Create Auction</a>
                    </li>
                </ol>
            </div>
        </div>
    </div>
</div>
    <div class="main_content">
        <div class="login_register_wrap section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-6 col-md-10">
                        <div class="login_wrap">
                            <div class="padding_eight_all bg-white">
                                <div class="heading_s1">
                                    <h3>Edit an Auction</h3>
                                </div>
                                {{ form_start(form) }}
                                <div class="form-group">
                                    {{ form_label(form.prix_initiale) }}
                                    {{ form_widget(form.prix_initiale, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.date_creation) }}
                                    {{ form_widget(form.date_creation, {'attr': {'class': 'form-control datetimepicker-input', 'data-target': '#datetimepicker1'}}) }}

                                </div>

                                <div class="form-group">
                                    {{ form_label(form.date_fermeture) }}
                                    {{ form_widget(form.date_fermeture, {'attr': {'class': 'form-control datetimepicker-input', 'data-target': '#datetimepicker1'}}) }}

                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
                                    <a href="{{ path('app_enchere_index') }}" class="btn btn-secondary">Back to List</a>
                                </div>
                                {{ form_end(form) }}
                                {{ include('enchere/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
