{% extends 'base.html.twig' %}

{% block title %}
    Antika | Ench√®re
{% endblock %}

{% block body %}

    <div class="main_content">
        <div class="login_register_wrap section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-6 col-md-10">
                        <div class="login_wrap">
                            <div class="padding_eight_all bg-white">
                                <div class="heading_s1">
                                    <h3>Create an Auction</h3>
                                </div>
                                {{ form_start(form) }}
                                <div class="form-group">
                                    {{ form_label(form.prix_initiale) }}
                                    {{ form_widget(form.prix_initiale, {'attr': {'class': 'form-control', 'placeholder': 'Event Name'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.date_creation) }}
                                    {{ form_widget(form.date_creation, {'attr': {'class': 'form-control datetimepicker-input', 'data-target': '#datetimepicker1'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.date_fermeture) }}
                                    {{ form_widget(form.date_fermeture, {'attr': {'class': 'form-control datetimepicker-input', 'data-target': '#datetimepicker1'}}) }}
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-fill-out btn-block" name="register">CREATE AUCTION</button>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}