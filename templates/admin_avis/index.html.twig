{% extends 'baseback.html.twig' %}

{% block title %}Avis index{% endblock %}

{% block content %}
    <h1 style="text-align:center; color:#933939;">Avis index</h1>

    <table class="table" style="margin: 0 auto;">
        <thead>
        <tr>
            <th>Id</th>
            <th>Commentaire</th>
            <th>Note</th>
            <th>CreatedAt</th>

        </tr>
        </thead>
        <tbody>
        {% for avi in avis %}
            <tr>
                <td>{{ avi.id }}</td>
                <td>{{ avi.commentaire }}</td>
                <td>{{ avi.note }}</td>
                <td>{{ avi.createdAt ? avi.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" style="text-align:center;">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
