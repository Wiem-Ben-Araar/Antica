{% extends 'base.html.twig' %}

{% block title %}
    Edit | Evenement
{% endblock %}

{% block body %}
    <div class="breadcrumb_section bg_gray page-title-mini">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="page-title">
                        <h1>Edit Evenement</h1>
                    </div>
                </div>
                <div class="col-md-6">
                    <ol class="breadcrumb justify-content-md-end">
                        <li class="breadcrumb-item">
                            <a href="#">Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_evenement_index') }}">Events</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_evenement_new') }}">Create Event</a>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="main_content">
        <div class="login_register_wrap section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-6 col-md-10">
                        <div class="login_wrap">
                            <div class="padding_eight_all bg-white">
                                <div class="heading_s1">
                                    <h3>Edit an Event</h3>
                                </div>
                                {{ form_start(form) }}
                                <div class="form-group">
                                    {{ form_label(form.nom) }}
                                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.lieu) }}
                                    {{ form_widget(form.lieu, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.description) }}
                                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.evenement_date) }}
                                    {{ form_widget(form.evenement_date, {'attr': {'class': 'form-control datetimepicker-input', 'data-target': '#datetimepicker1'}}) }}

                                </div>

                                <div class="form-group">
                                    {{ form_label(form.capacite) }}
                                    {{ form_widget(form.capacite, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
                                    <a href="{{ path('app_evenement_index') }}" class="btn btn-secondary">Back to List</a>
                                </div>
                                {{ form_end(form) }}
                                {{ include('evenement/_delete_form.html.twig') }}
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
