{% extends 'baseback.html.twig' %}

{% block title %}Create Expertise{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <h3 class="mt-5 mb-5">Create Form</h3>
            {% for message in app.flashes('notice') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
              {% endfor %}
            <div class="col-md-6 offset-md-3">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.id_produit) }}
                    {{ form_widget(form.id_produit,{'attr':{'class':'form-control'}})}}
                </div>
               
                <div class="form-group">
                    {{ form_label(form.prix_estime) }}
                    {{ form_widget(form.prix_estime,{'attr':{'class':'form-control'}})}}
                </div>
                <div class="form-group">
                    {{ form_label(form.condition_produit) }}
                    {{ form_widget(form.condition_produit,{'attr':{'class':'form-control'}})}}
                </div>
                <div class="form-group">
                    <button class="btn btn-info mt-2 text-white">Envoyer</button>
                </div>
                {{  form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}