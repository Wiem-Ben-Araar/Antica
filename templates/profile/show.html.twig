{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<h1>Votre Profile</h1>
<table class="table">
    <tbody>

    <tr>
        <th>Email</th>
        <td>{{ user.email }}</td>
    </tr>

    <tr>
        <th>Nom</th>
        <td>{{ user.nom }}</td>
    </tr>

    <tr>
        <th>Prénom</th>
        <td>{{ user.prenom }}</td>
    </tr>

    <tr>
        <th>Adresse</th>
        <td>{{ user.adresse }}</td>
    </tr>

    <tr>
        <th>Téléphone</th>
        <td>{{ user.telephone }}</td>
    </tr>


    </tbody>
</table>

<a href="{{ path('app_profile_edit') }}">edit</a>
{% endblock %}