{% form_theme form _self %}

{% block _evenement_evenement_date_widget %}
    {{ form_widget(form.evenement_date, {'attr': {'class': 'form-control datetimepicker-input', 'data-target': '#datetimepicker1'}}) }}
{% endblock %}

{% block _evenement_nom_row %}
    <div class="form-group row">
        {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
{% endblock %}

