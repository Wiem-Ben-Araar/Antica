{% extends 'base.html.twig' %}

{% block title %}
	New | Evenement
{% endblock %}

{% block body %}
	<div class="main_content">
		<div class="login_register_wrap section">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-xl-6 col-md-10">
						<div class="login_wrap">
							<div class="padding_eight_all bg-white">
								<div class="heading_s1">
									<h3>Create an Event</h3>
								</div>
								{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
								{{ form_row(form._token) }}
								<div class="form-group">
									{{ form_label(form.nom) }}
									{{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Event Name'}}) }}
									{{ form_errors(form.nom) }}
								</div>
								<div class="form-group">
									{{ form_label(form.lieu) }}
									{{ form_widget(form.lieu, {'attr': {'class': 'form-control', 'placeholder': 'Event Location'}}) }}
									{{ form_errors(form.lieu) }}
								</div>
								<div class="form-group">
									{{ form_label(form.description) }}
									{{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Event Description'}}) }}
									{{ form_errors(form.description) }}
								</div>
								<div class="form-group">
									{{ form_label(form.capacite) }}
									{{ form_widget(form.capacite, {'attr': {'class': 'form-control', 'placeholder': 'Event Capacity'}}) }}
									{{ form_errors(form.capacite) }}
								</div>
								<div class="form-group">
									{{ form_label(form.evenement_date) }}
									{{ form_widget(form.evenement_date, {'attr': {'class': 'form-control', 'placeholder': 'yyyy-mm-dd', 'autocomplete': 'off'}}) }}
									{{ form_errors(form.evenement_date) }}
								</div>

								<div class="form-group">
									<button type="submit" class="btn btn-fill-out btn-block" name="register">CREATE Event</button>
								</div>
								{{ form_end(form) }}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}